#include<iostream>
#include<stdlib.h>
#include<ctime>
#include<string.h>
using namespace std;

struct Student{
    int id;
    char name[30];
    float cgpa;
}*s;

int n;

void getdata(){
    cout<<"\nEnter total number of students: ";
    cin>>n;
    s=(struct Student *)malloc(n*sizeof(struct Student));
    for(int i=0; i<n; i++){
        cout<<"\nEnter ID, Name, Cgpa: ";
        cin>>s[i].id>>s[i].name>>s[i].cgpa;
    }
}

void display(){
    cout<<"\nID\tName\tCgpa";
    for(int i=0;i<n;i++){
        cout<<"\n"<<s[i].id<<"\t"<<s[i].name<<"\t"<<s[i].cgpa;
    }
}


void bubble(){
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1-i;j++){
            if(strcmp(s[j].name,s[j+1].name)>0){
                struct Student temp=s[j];
                s[j]=s[j+1];
                s[j+1]=temp;
            }
        }
    }
    cout<<"\nRecord sorted by Name.";
    display();
}





int main(){
    int choice, keyid;
    do{
        cout<<"\n\nMenu:";
        cout<<"\n1. Enter Data";
        cout<<"\n2. Display Data";
        
        cout<<"\n3. Bubble Sort (by Name)";
       
        cout<<"\n4. Exit";
        cout<<"\nEnter your choice: ";
        cin>>choice;

        switch(choice){
            case 1: getdata(); break;
            case 2: display(); break;
          
            case 3: bubble(); break;
            
            case 4: cout<<"Exiting..."; break;
            default: cout<<"Invalid choice!";
        }
    } while(choice != 4);

    free(s);
    return 0;
}
